{
  "runOnSave.commands": [
    {
      "globMatch": "**/*.{graphql,test.ts}",
      "command": "bun run codegen",
      "runIn": "terminal"
    },
    {
      "globMatch": "packages/cms/types.ts",
      "command": "bun run generate-cms-json-schema",
      "runIn": "terminal"
    }
  ],
  "typescript.tsdk": "node_modules/typescript/lib",
  "prettier.enable": false,
  "typescript.enablePromptUseWorkspaceTsdk": true,
  "eslint.workingDirectories": [
    {
      "mode": "auto"
    }
  ],
  "editor.defaultFormatter": "dbaeumer.vscode-eslint",
  "editor.codeActionsOnSave": {
    "source.organizeImports": "never",
    "source.fixAll.eslint": "explicit"
  },
  "[json]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  },
  "editor.formatOnSave": true,
  "cSpell.words": [
    "composability",
    "pucelle",
    "tldr",
    "zemble"
  ],
  "eslint.probe": [
    "javascript",
    "javascriptreact",
    "yaml",
    "json",
    "typescript",
    "typescriptreact",
    "JSON",
    "graphql",
    "jsonc"
  ],
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "yaml",
    "json",
    "typescript",
    "typescriptreact",
    "JSON",
    "graphql",
    "jsonc"
  ],
}