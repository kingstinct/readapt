{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "lint": {
      "outputMode": "errors-only",
      "inputs": [ "**/*" ]
    },
    "lint-quiet": {
      "outputMode": "errors-only",
      "inputs": [ "**/*" ]
    },
    "test": {
      "outputMode": "errors-only",
      "inputs": [
        "**/*.ts",
        "**/tsconfig.json",
        "**/package.json"
      ]
    },
    "build": {
      "outputMode": "errors-only",
      "inputs": [
        "**/*.ts",
        "**/tsconfig.json",
        "**/package.json"
      ],
      "outputs": [
        "*.js",
        "*.d.ts"
      ]
    },
    "clean":{
      "outputMode": "errors-only",
      "cache": false
    },
    "typecheck": {
      "outputMode": "errors-only",
      "inputs": [
        "**/*.ts",
        "**/*.tsx",
        "**/*.js",
        "**/*.jsx",
        "**/tsconfig.json",
        "**/package.json"
      ]
    },
    "graphql-codegen": {
      "outputMode": "errors-only",
      "outputs": [
        "**/*.generated/**/*",
        "**/*.generated.*"
      ],
      "inputs": [
        "**/*.graphql",
        "**/codegen.ts",
        "**/package.json"
      ]
    }
  }
}
