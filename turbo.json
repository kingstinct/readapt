{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "lint": {
      "outputMode": "errors-only"
    },
    "lint-quiet": {
      "outputMode": "errors-only"
    },
    "test": {
      "outputMode": "errors-only"
    },
    "build": {
      "outputMode": "errors-only",
      "outputs": [
        "*.js",
        "*.d.ts",
        "*.mjs",
        "*.d.mts"
      ],
      "cache": false
    },
    "clean":{
      "outputMode": "errors-only",
      "cache": false
    },
    "typecheck": {
      "outputMode": "errors-only",
      "inputs": [
        "**/*.ts",
        "**/*.tsx",
        "**/*.js",
        "**/*.jsx"
      ]
    },
    "graphql-codegen": {
      "outputMode": "errors-only",
      "inputs": [ "**/*.graphql" ]
    }
  }
}
