{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "lint": {
      "dependsOn": [
        "^codegen",
        "codegen"
      ],
      "outputMode": "errors-only",
      "inputs": [ "**/*" ]
    },
    "test": {
      "dependsOn": [
        "^codegen",
        "codegen"
      ],
      "outputMode": "errors-only",
      "inputs": [
        "**/*.ts",
        "**/*.tsx",
        "**/*.js",
        "**/*.jsx",
        "**/tsconfig.json",
        "**/package.json"
      ]
    },
    "typecheck": {
      "dependsOn": [
        "^codegen",
        "codegen"
      ],
      "outputMode": "errors-only",
      "inputs": [
        "**/*.ts",
        "**/*.tsx",
        "**/*.js",
        "**/*.jsx",
        "**/tsconfig.json",
        "**/package.json"
      ]
    },
    "codegen": {
      "outputMode": "errors-only",
      "outputs": [
        "**/*.generated/**/*",
        "**/*.generated.*"
      ],
      "inputs": [
        "**/*.graphql",
        "**/codegen.ts",
        "**/package.json"
      ]
    }
  }
}
